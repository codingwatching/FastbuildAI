{
    "name": "@buildingai/db",
    "version": "0.0.0",
    "private": true,
    "license": "MIT",
    "main": "./dist/index.js",
    "module": "./src/index.ts",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./entities": {
            "types": "./dist/entities/index.d.ts",
            "import": "./dist/entities/index.js",
            "require": "./dist/entities/index.js"
        },
        "./seeds": {
            "types": "./dist/seeds/index.d.ts",
            "import": "./dist/seeds/index.js",
            "require": "./dist/seeds/index.js"
        },
        "./@nestjs/typeorm": {
            "types": "./dist/@nestjs/typeorm.d.ts",
            "import": "./dist/@nestjs/typeorm.js",
            "require": "./dist/@nestjs/typeorm.js"
        },
        "./typeorm": {
            "types": "./dist/typeorm.d.ts",
            "import": "./dist/typeorm.js",
            "require": "./dist/typeorm.js"
        }
    },
    "scripts": {
        "clean": "rimraf dist .turbo dist/build.tsbuildinfo",
        "check-types": "tsc --noEmit",
        "build": "rimraf dist && tsc -p tsconfig.build.json && pnpm run copy:data",
        "copy:data": "cpy 'src/seeds/data/**' dist/seeds/data",
        "dev": "tsc -p tsconfig.build.json --watch",
        "format": "biome format --write .",
        "format:check": "biome ci .",
        "lint": "eslint . --quiet",
        "lint:fix": "eslint . --fix",
        "watch": "tsc -p tsconfig.build.json --watch",
        "test": "jest",
        "test:dev": "jest --watch",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:create": "node scripts/create-migration.mjs",
        "migration:generate": "node scripts/generate-migration.mjs",
        "migration:create:extension": "node scripts/create-extension-migration.mjs",
        "migration:generate:extension": "node scripts/generate-extension-migration.mjs"
    },
    "dependencies": {
        "@buildingai/ai-sdk": "workspace:*",
        "@buildingai/config": "workspace:*",
        "@buildingai/constants": "workspace:*",
        "@buildingai/di": "workspace:*",
        "@buildingai/dto": "workspace:*",
        "@buildingai/logger": "workspace:*",
        "pg": "catalog:api",
        "pg-connection-string": "^2.9.1"
    },
    "devDependencies": {
        "@buildingai/eslint-config": "workspace:*",
        "@buildingai/types": "workspace:*",
        "@buildingai/typescript-config": "workspace:*",
        "@types/pg": "^8.15.5",
        "globals": "^16.5.0"
    }
}