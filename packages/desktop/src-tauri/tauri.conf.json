{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "BuildingAI",
    "version": "0.1.0",
    "identifier": "buildingai.desktop",
    "build": {
        "devUrl": "http://localhost:4090",
        "frontendDist": "../../../public/web",
        "beforeDevCommand": "pnpm run prepare",
        "beforeBuildCommand": "pnpm run prepare"
    },
    "app": {
        "windows": [
            {
                "title": "BuildingAI",
                "width": 1152,
                "height": 720,
                "minWidth": 1152,
                "minHeight": 720,
                "devtools": true,
                "center": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
